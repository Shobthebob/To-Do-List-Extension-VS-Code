{
  "name": "to-do-manager",
  "displayName": "To-Do Manager",
  "description": "A simple to-do list extension to manage your tasks.",
  "version": "1.0.5",
  "publisher": "ShoubhitJamadhiar",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shobthebob/To-Do-List-Extension-VS-Code"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "icon": "./assets/logo.png",
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "to-do",
          "title": "To-Do List",
          "icon": "./assets/icon.png"
        }
      ]
    },
    "views": {
      "to-do": [
        {
          "icon": "",
          "type": "webview",
          "id": "toDo",
          "name": "To-Do List",
          "initialSize": 3
        },
        {
          "icon": "",
          "type": "webview",
          "id": "completed",
          "name": "Completed Tasks",
          "initialSize": 0
        }
      ]
    },
    "commands": [
      {
        "command": "toDo.importTasks",
        "title": "Import Tasks"
      },
      {
        "command": "toDo.exportTasks",
        "title": "Export Tasks"
      },
      {
        "command": "completed.clearAll",
        "title": "Clear All"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "toDo.importTasks",
          "when": "view == toDo",
          "group": "transfer"
        },
        {
          "command": "toDo.exportTasks",
          "when": "view == toDo",
          "group": "transfer"
        },
        {
          "command": "completed.clearAll",
          "when": "view == completed",
          "group": "clear"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}